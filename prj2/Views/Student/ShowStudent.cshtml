@model IEnumerable<prj2.Models.Student>
    <h2>Show Students</h2>
    <a asp-action="AddStudent">Add Student</a>
    <table border="1">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
        </tr>

        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Age</td>
                <td>
                    <a asp-action="DeleteStudent"
                    asp-route-id=@student.Id>Delete
                    </a>
                </td>
            </tr>
        }
    </table>    